<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/entry_layout"
    android:layout_height="match_parent"
    tools:context="com.hadibastanfar.luckyguess.EntryActivity">



    <Button
        android:onClick="selectEN"
        android:id="@+id/buHowToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/maroon"
        android:textColor="#fff"
        android:fontFamily="@font/comic"
        android:textSize="50sp"
        android:text="English"/>

    <Button
        android:onClick="selectFA"
        android:id="@+id/buLetsStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/seaBlue"
        android:textColor="#fff"
        android:fontFamily="@font/farsi"
        android:textSize="50sp"
        android:text="فارسی"/>

</LinearLayout>
