<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/entry_layout"
    android:layout_height="match_parent"
    android:background="@color/seaBlue"
    tools:context="com.hadibastanfar.luckyguess.EntryActivity">
    <ir.adad.client.Banner
        android:layout_gravity="center"
        android:id="@+id/banner_ad_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <Button
        android:onClick="howToPlay"
        android:id="@+id/buHowToPlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/seaBlue"
        android:textColor="#fff"
        android:fontFamily="@font/comic"
        android:textSize="50sp"
        android:text="How To Play?"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="201dp" />

    <Button
        android:onClick="letStart"
        android:id="@+id/buLetsStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:background="@color/maroon"
        android:textColor="#fff"
        android:fontFamily="@font/comic"
        android:textSize="50sp"
        android:text="Let's Begin"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="201dp" />

</LinearLayout>
